<%= simple_form_for(@item) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :price %>
  <%= f.number_field :price, :step => "0.01" %>
  <%= f.label :quantity %>
  <%= f.number_field :quantity %>
  <%= f.label :weight %>
  <%= f.number_field :weight, :step => "0.01" %>
  <%= f.label :categories %>
  <%= f.text_field :categories %>
  <%= f.submit %>
<% end %>
